    <div id="textSearch" align="center"> 
        Enter a search query
        <form id="search-form" action="/upload" method="POST">
          <input type="text" id="search-query" name="search"/>
          <button type="submit" id="submit-button">Search</button>
        </form>    
    </div>

    <br />
    <br />
    <br />
