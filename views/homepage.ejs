<body> 

    <div id="fileUpload" align="center">
        Upload a JSON file
        <form id="file-form" action="/upload" method="POST">
          <input type="file" id="file-select" name="json" multiple/>
          <button type="submit" id="upload-button">Upload</button>
        </form>    
    </div>

